!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width,initial-scale=1"}
    %title Community App
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_importmap_tags
    %link{href: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel: "stylesheet"}
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-success.mb-4
      .container
        = link_to "Community App", root_path, class: "navbar-brand"
        %button.navbar-toggler{type: "button", data: {bs: {toggle: "collapse", target: "#navbarNav"}}}
          %span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          %ul.navbar-nav
            %li.nav-item
              = link_to "Comunidades", root_path, class: "nav-link"
    .container
      - if flash[:notice]
        .alert.alert-success.alert-dismissible.fade.show{role: "alert"}
          = flash[:notice]
          %button.btn-close{type: "button", data: {bs: {dismiss: "alert"}}}
      - if flash[:alert]
        .alert.alert-danger.alert-dismissible.fade.show{role: "alert"}
          = flash[:alert]
          %button.btn-close{type: "button", data: {bs: {dismiss: "alert"}}}
      = yield
    %script{src: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"}
